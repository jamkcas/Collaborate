<nav class='row tabs'>
  <ul class='navTabs clearfix'>
    <li class='tab'><%= link_to 'Available Projects', projects_path %></a></li>
    <li class='tab activeTab'>Available Talent</li>
  </ul>
</nav>

<header class='newP row'>
  <h3>Submit Your Skill Set</h3>
</header>

<%= form_for @skill, html: {class: 'newProject row'} do |f| %>
  <div class='inputs row'>
    <%= f.label 'Kinds of projects you are looking to join', :class => 'col-lg-4' %>
    <%= f.text_field :interests, :class => 'col-lg-5 formRight' %>
  </div>
  <div class='inputs row'>
    <%= f.label 'Category', :class => 'col-lg-4' %>
    <div class='category clearfix col-lg-5 formRight'>
      <div class='categories'>
        <img src='/categoryIcon_technology_85x85.png' class='icons tech'>
        <%= f.radio_button(:category, tag_value = "Technology", options = {class: 'checks display'}) %>
        <img src='/categoryIcon_art_85x85.png' class='icons art'>
        <%= f.radio_button(:category, tag_value = "Arts", options = {class: 'checks display'}) %>
        <img src='/categoryIcon_science_85x85.png' class='icons sci'>
        <%= f.radio_button(:category, tag_value = "Science", options = {class: 'checks display'}) %>
      </div>
    </div>
  </div>
  <div class='inputs row'>
    <%= f.label 'Primary skill to offer', :class => 'col-lg-4' %>
    <%= f.text_field :primary_skill, :class => 'col-lg-5 formRight' %>
  </div>
  <div class='inputs row'>
    <%= f.label 'Other skills', :class => 'col-lg-4' %>
    <%= f.text_area :skills, rows: 7,:class => 'col-lg-5 formRight' %>
  </div>
  <div class='inputs row'>
    <%= f.label 'Commitment Needed', :class => 'col-lg-4' %>
    <div class='category clearfix col-lg-5 formRight'>
      <div class='categories'>
        <p>Hours Per Week: </p>
        <%= f.radio_button(:commitment_level, tag_value = "1-2", options = {}) %>
        <%= label :commitment_level, '1-2', :class => 'comLev' %>
        <%= f.radio_button(:commitment_level, tag_value = "3-10", options = {}) %>
        <%= label :commitment_level, '3-10', :class => 'comLev' %>
        <%= f.radio_button(:commitment_level, tag_value = "11-15", options = {}) %>
        <%= label :commitment_level, '11-15', :class => 'comLev' %>
        <%= f.radio_button(:commitment_level, tag_value = "16-20", options = {}) %>
        <%= label :commitment_level, '16-20', :class => 'comLev' %>
        <%= f.radio_button(:commitment_level, tag_value = "21-30", options = {}) %>
        <%= label :commitment_level, '21-30', :class => 'comLev' %>
        <%= f.radio_button(:commitment_level, tag_value = "31+", options = {}) %>
        <%= label :commitment_level, '31+', :class => 'comLev' %>
      </div>
    </div>
  </div>
  <div class='inputs row'>
    <%= f.label 'Add Search Keywords', :class => 'col-lg-4' %>
    <%= f.text_field :search_keywords, :class => 'col-lg-5 formRight' %>
  </div>
  <div class='post'>
    <%= f.submit 'Post Your Skills' %>
  </div>
<% end %>

