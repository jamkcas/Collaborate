<%= form_for @project do |f| %>
  <%= f.text_field :title, placeholder: 'Title' %>
  <%= f.text_field :tagline, placeholder: 'Tagline' %>
  <%= f.select(:category, %w[Technology Arts Science]) %>
  <%= f.text_area :description, cols: 20, rows: 10, placeholder: 'Description' %>
  <%= f.text_area :needs, cols: 20, rows: 10, placeholder: 'Needs' %>
  <%= f.select(:commitment_level, ['Very Serious', 'Serious', 'Semi Serious', 'Hobby']) %>
  <%= f.text_area :search_keywords, cols: 20, rows: 10, placeholder: 'Keywords to add to search filter' %>
  <%= f.submit 'Post Project' %>
<% end %>